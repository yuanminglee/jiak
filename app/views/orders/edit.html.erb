<h1><%= @restaurant.name %></h1>
<p><small><%= @restaurant.description %></small></p>
<p>
  <strong>Opening days: </strong>
  <%= @restaurant.opening_days %>
</p>

<h4>Collection details</h4>
<p>
  <strong>Collection address: </strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Collection time: </strong>
  <%= @restaurant.collection_time.strftime('%l:%M%p') %>
</p>

<h4>Current order:</h4>
<ul>
  
  <% @order.line_items.each do |line_item| %>
    <li>
      <strong><%= line_item.meal.name %>:</strong> <%= line_item.quantity %>
      <%= link_to("Remove item", line_item_path(line_item), method: :delete, data: { confirm: "Are you sure?" }) %>
    </li>
    
  <% end %>
  <strong>Total Price: $</strong><%= @order.total_price %>

   
</ul>

<h4 class="mt-3">Choose your meals</h4>
<div class="card-group">
  <% @restaurant.meals.each do |meal| %>
    <div class="card">
      <h2><%= meal.name %></h2>
      <%= cl_image_tag meal.photo.key, height: 200, width: 300, crop: :fill %>
      <p><%= meal.description %></p>
      <p><%= meal.ingredients %></p>
      <p>$<%= meal.price %></p>
      <p><%= meal.pax %></p>
      <%= simple_form_for @order do |f| %>
        <%= f.simple_fields_for :line_item do |line_item_f| %>
          <%= line_item_f.hidden_field :meal_id, :value => meal.id %>
          <%= line_item_f.input :quantity %>
          <%= line_item_f.button :submit,'Add' %>
        <% end %>
      <% end %>
    </div>
  <% end %>
</div>
