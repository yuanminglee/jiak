<div class="card w-50 m-auto">
  <table class="table mb-0">
    <thead class="thead-dark">
      <tr>
        <th colspan="2">Your order #<%= @order.id %></th>
        <% if @order.status == "Cancelled" %>
          <th class="text-right">Cancelled</th>
        <% else %>
          <th class="text-right"><%= link_to "Edit order", edit_order_path(@order), class: "text-white" %></th>
        <% end %>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td colspan="3"><%= @order.restaurant.address %></td>
      </tr>
      <tr  class="border-bottom">
        <td colspan="3"><strong>
          <%= @order.collection_date.strftime('%-d %b %Y') %>, <%= @order.restaurant.collection_time.strftime('%l:%M%p') %>
        </strong></td>
      </tr>
      <% @grouped_line_items.each do |meal, line_items| %>
        <tr class="borderless-y">
          <td><%= meal.name %></td>
          <td class="text-right">x<%= line_items.sum(&:quantity) %></td>
          <td class="text-right"><%= (line_items.sum(&:quantity) * meal.price).format %></td>
        </tr>
      <% end %>
      <tr>
        <td colspan="2" class="font-weight-bold">Total</td>
        <td class="text-right font-weight-bold"><%= @order.total_price.format %></td>
      </tr>
      <tr class="pb-0">
        <td colspan="3" class="p-0"><%= link_to "Checkout now", "#" , class: 'btn btn-dark w-100' if @order.status != "Cancelled" %></td>
      </tr>
    </tbody>
  </table>
</div>
